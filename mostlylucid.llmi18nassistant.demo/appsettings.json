{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "LlmI18nAssistant": {
    "Ollama": {
      "Endpoint": "http://localhost:11434",
      "Model": "llama3.2:3b",
      "Temperature": 0.3,
      "MaxTokens": 512,
      "TimeoutSeconds": 60
    },
    "Nmt": {
      "Enabled": false,
      "ServiceEndpoints": ["http://localhost:24080"],
      "UseAsBaseline": true
    },
    "Embedding": {
      "Provider": "Ollama",
      "OllamaModel": "nomic-embed-text:latest",
      "Dimension": 768
    },
    "ConsistencyMode": {
      "Enabled": true,
      "GlossaryPath": "./glossaries",
      "MinRelevance": 0.6,
      "MaxContextItems": 5,
      "TopK": 3
    },
    "ValueTransformation": {
      "PreserveFormatStrings": true,
      "PreserveNamedPlaceholders": true,
      "PreserveHtmlTags": true,
      "PreserveMarkdown": true,
      "SkipKeyPatterns": [],
      "SkipValuePatterns": ["^https?://", "^\\d+$"]
    },
    "DataPath": "./data",
    "DefaultSourceLanguage": "en",
    "VectorStoreProvider": "File"
  }
}
