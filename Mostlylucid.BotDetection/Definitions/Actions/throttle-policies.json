{
  "$schema": "./action-policy.schema.json",
  "_comment": "Built-in Throttle action policies. These are compiled into the library.",
  "throttle": {
    "Type": "Throttle",
    "Description": "Default throttle - moderate delay with jitter",
    "Tags": [
      "default",
      "production"
    ],
    "BaseDelayMs": 500,
    "MinDelayMs": 100,
    "MaxDelayMs": 5000,
    "JitterPercent": 0.25,
    "ScaleByRisk": true,
    "ReturnStatus": false,
    "IncludeHeaders": false
  },
  "throttle-gentle": {
    "Type": "Throttle",
    "Extends": "throttle",
    "Description": "Gentle throttle - minimal delay, good for low-confidence detections",
    "Tags": [
      "production",
      "gentle"
    ],
    "BaseDelayMs": 200,
    "MaxDelayMs": 2000,
    "JitterPercent": 0.2
  },
  "throttle-moderate": {
    "Type": "Throttle",
    "Extends": "throttle",
    "Description": "Moderate throttle - balanced delay for medium-confidence bots",
    "Tags": [
      "default",
      "production"
    ],
    "BaseDelayMs": 500,
    "MaxDelayMs": 5000,
    "JitterPercent": 0.25
  },
  "throttle-aggressive": {
    "Type": "Throttle",
    "Extends": "throttle",
    "Description": "Aggressive throttle - long delays for high-confidence bots",
    "Tags": [
      "production",
      "strict"
    ],
    "BaseDelayMs": 2000,
    "MaxDelayMs": 30000,
    "JitterPercent": 0.3,
    "ExponentialBackoff": true,
    "BackoffFactor": 2.0
  },
  "throttle-stealth": {
    "Type": "Throttle",
    "Extends": "throttle",
    "Description": "Stealth throttle - randomized delays to avoid detection. No headers.",
    "Tags": [
      "production",
      "stealth",
      "anti-scraping"
    ],
    "BaseDelayMs": 500,
    "MaxDelayMs": 10000,
    "JitterPercent": 0.5,
    "ScaleByRisk": true,
    "ReturnStatus": false,
    "IncludeHeaders": false,
    "IncludeRetryAfter": false
  }
}
