{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "ArchiveOrg": {
    "TargetUrl": "https://www.mostlylucid.co.uk/posts/",
    "EndDate": null,
    "StartDate": null,
    "OutputDirectory": "./archive-output",
    "RateLimitMs": 5000,
    "MaxConcurrentDownloads": 1,
    "IncludePatterns": [
      "/posts/\\d+\\.aspx$"
    ],
    "ExcludePatterns": [],
    "UniqueUrlsOnly": true,
    "MimeTypes": [
      "text/html"
    ],
    "StatusCodes": [
      200
    ],
    "RequestTimeoutSeconds": 180,
    "MaxRetries": 3,
    "RetryDelayMs": 5000
  },
  "MarkdownConversion": {
    "InputDirectory": "./archive-output",
    "OutputDirectory": "./markdown-output",
    "ContentSelector": "div.post",
    "RemoveSelectors": [
      "nav",
      "header",
      "footer",
      ".sidebar",
      ".advertisement",
      ".ads",
      ".comments",
      ".social-share",
      ".share-buttons",
      ".related-posts",
      ".wp-block-group",
      "script",
      "style",
      "noscript",
      "iframe",
      "#comments",
      "#commentform",
      ".commentform",
      ".postNav",
      ".post-nav",
      ".navigation",
      "form",
      "input",
      "textarea",
      ".feedback",
      "#feedback"
    ],
    "GenerateTags": true,
    "ExtractDates": true,
    "FilePattern": "*.html",
    "PreserveImages": true,
    "ImagesDirectory": "images",
    "DateSelector": ".postfoot",
    "PostSelector": "",
    "PostTitleSelector": "h2",
    "PostLinkSelector": "h2 a",
    "SkipUrlPatterns": [],
    "MinContentLength": 200
  },
  "Ollama": {
    "BaseUrl": "http://localhost:11434",
    "Model": "gemma3:4b",
    "Temperature": 0.3,
    "MaxTags": 5,
    "TimeoutSeconds": 60,
    "Enabled": true
  }
}
