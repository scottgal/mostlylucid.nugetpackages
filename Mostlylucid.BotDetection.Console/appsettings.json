{
  "SignatureLogging": {
    "Enabled": true,
    "MinConfidence": 0.7,
    "PrettyPrintJsonLd": true,
    "SignatureHashKey": "CHANGE_ME_IN_PRODUCTION_USE_SECURE_RANDOM_KEY_HERE"
  },

  "BotDetection": {
    "DefaultPolicyName": "demo",
    "DefaultActionPolicyName": "logonly",
    "EnableLearning": false,

    "Policies": {
      "demo": {
        "Description": "DEMO MODE - Full logging, all fast detectors, no blocking",
        "FastPath": [
          "FastPathReputation",
          "UserAgent",
          "Header",
          "Ip",
          "SecurityTool",
          "CacheBehavior",
          "Behavioral",
          "ClientSide",
          "Inconsistency",
          "VersionAge"
        ],
        "SlowPath": [],
        "AiPath": [],
        "ResponsePath": [
          "ResponseBehavior"
        ],
        "UseFastPath": true,
        "ForceSlowPath": false,
        "EarlyExitThreshold": 1.0,
        "ImmediateBlockThreshold": 1.0,
        "ActionPolicyName": "logonly",
        "BypassTriggerConditions": true,
        "Tags": ["demo", "logging", "fast-path-only"]
      }
    },

    "ActionPolicies": {
      "logonly": {
        "Description": "Log all detections but allow all traffic",
        "AllowAction": {
          "Enabled": true
        },
        "BlockAction": {
          "Enabled": false
        },
        "LogAction": {
          "Enabled": true,
          "LogLevel": "Information",
          "IncludeSignature": true
        }
      }
    }
  }
}
