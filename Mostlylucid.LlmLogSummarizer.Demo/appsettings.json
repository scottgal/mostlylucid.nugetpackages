{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Mostlylucid.LlmLogSummarizer": "Debug"
    }
  },
  "AllowedHosts": "*",
  "LlmLogSummarizer": {
    "Enabled": true,
    "SummarizationInterval": "01:00:00",
    "LookbackPeriod": "24:00:00",
    "RunOnStartup": false,
    "EnableDiagnosticLogging": true,
    "TopPatternsCount": 10,
    "MinOccurrencesForReporting": 1,
    "Ollama": {
      "Endpoint": "http://localhost:11434",
      "Model": "llama3.2:3b",
      "Temperature": 0.3,
      "MaxTokens": 2048,
      "TimeoutSeconds": 120
    },
    "Sources": {
      "SerilogFiles": [
        {
          "Name": "Application Logs",
          "Path": "logs/*.json",
          "IncludeArchived": true
        }
      ]
    },
    "Output": {
      "Markdown": {
        "Enabled": true,
        "OutputDirectory": "./logs/summaries",
        "FileNamePattern": "log-summary-{date}.md",
        "MaxFilesToKeep": 30
      }
    },
    "Clustering": {
      "SimilarityThreshold": 0.8,
      "UseLevenshteinDistance": true,
      "MaxClusters": 100,
      "MinClusterSize": 1
    }
  }
}
